class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int suff=1;
        int prev=1;
        int maxi=INT_MIN;
        int n=nums.size();
        for(int i=0;i<n;i++){
            if(prev==0){
                prev=1;
            }
            if(suff==0){
                suff=1;
            }
            prev*=nums[i];
            suff*=nums[n-i-1];
            maxi=max(maxi,max(prev,suff));
        }
        return maxi;
    }
};
